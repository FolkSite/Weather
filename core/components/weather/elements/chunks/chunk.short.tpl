<table class="weather table_short" cellspacing="0">
	<tr>
		<td class="day [[+css_class_date]]">[[+day_week]]</td>
	</tr>
	<tr>
		<td class="month [[+css_class_date]]">[[+day_number]] [[+month]]</td>
	</tr>

	<tr>
		<td class="[[+css_class_day]]"><img src="[[+image]]" width="30" height="30"></td>
	</tr>
	<tr>
		<td class="type [[+css_class_day]]">[[+weather_type]]</td>
	</tr>
	<tr>
		<td class="[[+css_class_day]]" title="Минимальная температура днём"> [[+temperature_day]]</td>
	</tr>
	<tr>
		<td class="[[+css_class_night]]" title="Минимальная температура ночью"> [[+temperature_night]]</td>
	</tr>
</table>
